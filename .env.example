# 鲸选报表平台 - 环境变量配置
# 复制此文件为 .env 并根据实际情况修改

# =========== 应用配置 ===========
NODE_ENV=development
PORT=4000

# =========== OceanBase数据库配置 ===========
DB_TYPE=oceanbase
DB_HOST=localhost
DB_PORT=3306
DB_USER=your_oceanbase_user
DB_PASSWORD=your_oceanbase_password
DB_NAME=tz_database
DB_CONNECTION_LIMIT=10
DB_QUEUE_LIMIT=1000

# =========== 阿里云DataWorks配置 ===========
DATAWORKS_ENDPOINT=dw-xxx.dataworks.aliyuncs.com
DATAWORKS_API_KEY=your_dataworks_ak
DATAWORKS_API_SECRET=your_dataworks_sk
DATAWORKS_PROJECT_ID=your_project_id

# =========== 导出功能配置 ===========
EXPORT_MAX_SIZE=50000
EXPORT_RETENTION_DAYS=1
EXPORT_STORAGE_PATH=./exports
EXPORT_BATCH_SIZE=1000

# =========== 查询性能配置 ===========
QUERY_TIMEOUT_MS=30000
MAX_RECORDS_PER_PAGE=500
DEFAULT_PAGE_SIZE=50

# =========== Docker开发环境数据库 ===========
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=jingxuan_test
MYSQL_USER=dev_user
MYSQL_PASSWORD=dev_password