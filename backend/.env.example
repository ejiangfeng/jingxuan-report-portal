# 服务器配置
PORT=4000
NODE_ENV=development
USE_MOCK_DATA=true

# CORS配置
CORS_ORIGIN=http://localhost:3000

# 数据库连接配置 (OceanBase)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=密码
DB_DATABASE=jingxuan_order_db
DB_CONNECTION_LIMIT=10

# DataWorks配置 (备用数据源)
DATAWORKS_ENDPOINT=dataworks.cn-hangzhou.dataworks.aliyuncs.com
DATAWORKS_REGION=cn-hangzhou
DATAWORKS_PROJECT_ID=项目ID
DATAWORKS_ACCESS_KEY_ID=AccessKeyId
DATAWORKS_ACCESS_KEY_SECRET=AccessKeySecret

# 日志配置
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# 安全配置
JWT_SECRET=your-jwt-secret-key-here-change-in-production
RATE_LIMIT_WINDOW_MS=15*60*1000  # 15分钟
RATE_LIMIT_MAX_REQUESTS=100      # 每个IP每15分钟100个请求

# 导出配置
EXPORT_MAX_RECORDS=50000
EXPORT_FILE_RETENTION_DAYS=1
EXPORT_TEMP_DIR=./temp/exports

# 缓存配置
CACHE_ENABLED=true
CACHE_TTL_SECONDS=600  # 10分钟

# 性能监控
QUERY_TIMEOUT_MS=30000  # 30秒超时

# 开发模式配置
ENABLE_SWAGGER=true